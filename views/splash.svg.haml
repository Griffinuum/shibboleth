!!! XML
=%{<!DOCTYPE svg PUBLIC "-//W3C//DTD SVG 1.1//EN" "http://www.w3.org/Graphics/SVG/1.1/DTD/svg11.dtd">}
%svg{height:height*scale, width:width*scale, viewBox: "0 0 #{width} #{height}", xmlns: "http://www.w3.org/2000/svg", 'xmlns:xlink' => "http://www.w3.org/1999/xlink"}
  :css
      rect.bg {
        fill:#600000;
        fill:url(#radial);
      }
      line {
        stroke-width:1px;
        stroke:#555;
      }
      text {
        fill:white;
        font-size:#{3*ipad}em;
        font-family:'Gill Sans';
        text-shadow:0 0.1em 0.1em #111;
      }
  %defs
    %path#key-path{d: "M 0, 57 l 10, 10 l 4, -4 l 4, 4 l 6, -6 h 5 l 7, 7 l 5, -5 h 2 l 4, 4 l 5, -5 h 3 l 6, 6 h 9 a 24, 24 0 1 0 -2.7665, -19.8623 h -60 z M 100, 54 a 5, 5 0 1 0 10, 0 a 5, 5 0 1 0 -10, 0 z"}
    %filter#shadow
      %feGaussianBlur{in: "SourceGraphic", stdDeviation: 3}
    %radialGradient#radial{cx: "50%", cy: "50%", r: "100%", fx: "50%", fy: "50%"}
      %stop{offset:"0%", style: "stop-color:rgb(190,30,30);stop-opacity:1" }
      %stop{offset:"90%", style: "stop-color:rgb(40,0,0);stop-opacity:1" }
    %radialGradient#key-radial{cx:"80%", cy:"50%", r:"100%", fx:"80%", fy:"50%"}
      %stop{offset:"0%", style: "stop-color:rgb(255,255,255);stop-opacity:1"}
      %stop{offset:"40%", style: "stop-color:rgb(192,192,192);stop-opacity:1"}
    %linearGradient#notch{x1: "0%", y1:"0%", x2:"0%", y2:"100%"}
      %stop{offset:"0%", style: "stop-color:rgb(0,0,0);stop-opacity:1"}
      %stop{offset:"100%", style: "stop-color:rgb(180,180,180);stop-opacity:1"}
    %linearGradient#groove{x1:"0%", y1:"0%", x2:"0%", y2:"100%"}
      %stop{offset:"0%", style: "stop-color:rgb(180,180,180);stop-opacity:1"}
      %stop{offset:"50%", style: "stop-color:rgb(0,0,0);stop-opacity:1"}
      %stop{offset:"100%", style: "stop-color:rgb(180,180,180);stop-opacity:1"}
  %rect.bg{x:0, y:0, width:"100%", height:"100%"}
  - x = (width - (57*4*ipad)) / (4*ipad)
  %g{transform: "scale(#{2*ipad}) translate(#{x},#{landscape ? 25 : 50}) rotate(-45, 57, 57)"}
    %use{'xlink:href'=>"#key-path", 'fill-rule'=>"evenodd", style:"filter:url(#shadow);fill:#000;stroke:#000;stroke-width:1px;"}
    %use{'xlink:href'=>"#key-path", 'fill-rule'=>"evenodd", style:"fill:url(#key-radial);stroke:black;stroke-width:1px;"}
    %path{d: "M 1 58 h 70 c -6 -6 -12 -6 -18 -6 h -49 L 0 57z", style: "fill:url(#notch);stroke:#333;"}
    %line{x1:79, y1:40, x2:79, y2:70}
    %line{x1:83, y1:40, x2:83, y2:70}
    %line{x1:85, y1:37, x2:85, y2:73}
    %line{x1:89, y1:37, x2:89, y2:73}
    %rect{x:79, y:40, width:4, height:30, style: "fill:url(#groove);"}
    %rect{x:85, y:37, width:4, height:36, style: "fill:url(#groove);"}
  - indent = width / 16 
  %text{x:indent, y:height-40, textLength: "#{width-indent*2}px"}shibboleth
